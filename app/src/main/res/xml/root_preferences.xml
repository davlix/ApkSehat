<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Pengaturan Siklus">

        <EditTextPreference
            app:key="cycle_length"
            app:title="Panjang Siklus Rata-Rata"
            app:summary="Jumlah hari antara awal periode (default: 28)"
            app:defaultValue="28"
            android:numeric="integer"
            android:inputType="number"
            app:useSimpleSummaryProvider="true"
            tools:ignore="Deprecated" />

        <EditTextPreference
            app:key="period_length"
            app:title="Panjang Periode Rata-Rata"
            app:summary="Jumlah hari periode berlangsung (default: 7)"
            app:defaultValue="7"
            android:numeric="integer"
            android:inputType="number"
            app:useSimpleSummaryProvider="true"
            tools:ignore="Deprecated" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Notifikasi">
        <SwitchPreferenceCompat
            app:key="notification_enabled"
            app:title="Aktifkan Notifikasi"
            app:summary="Dapatkan pengingat untuk periode Anda"
            app:defaultValue="true" />
    </PreferenceCategory>

</PreferenceScreen>